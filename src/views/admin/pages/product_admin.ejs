<!DOCTYPE html>
<html lang="vi">

<head>
	<meta charset="UTF-8">
	<meta name="theme-color" content="#2a7ee4">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="author" content="IE104.O12_Nhom2">
	<meta name="description" content="Quản lý sản phẩm TECHTWO">
	<link rel="shortcut icon" type="image/x-icon" href="/imgs/ico-logo-blue.png">
	<link rel="stylesheet" href="/styles/admin/pages/cate_admin.css">
	<link rel="stylesheet" href="/styles/admin/pages/product_admin.css">

	<title>TECHTWO.Admin - Sản phẩm</title>
</head>

<body>
	<div class="grid-container">
		<!-- Header -->
		<%- include('../partials/sidebar_admin') %>
		<!-- Sidebar -->
		<%- include('../partials/header_admin', title) %>
		<!-- Main -->
		<main class="main-container">
			<!-- Page Header -->
			<div class="main-header">
				<div class="row">
					<div class="">
						<h3 class="main-header-title">Sản phẩm <span class="main-header__badge"><%= data.totalRow %></span></h3>
						<div class="export-import">
							<a class="admin-a text-body" href="#">
								<span class="material-symbols-rounded"> download </span> Xuất file
							</a>
							<a class="admin-a text-body" href="#">
								<span class="material-symbols-rounded"> upload_file </span> Nhập file
							</a>
						</div>
					</div>
					<!-- End Col -->

					<div class="">
						<a class="admin-a btn-admin btn-primary" href="/admin/products_admin/add">
							<span class="material-symbols-rounded"> add </span>
							<p>Thêm</p>
						</a>
					</div>
					<!-- End Col -->
				</div>
				<!-- End Row -->

				<!-- Nav -->
				<ul class="main__nav main-header__tabs nav" id="pageHeaderTab" role="tablist">
					<li class="nav__item active">
						<a class="admin-a nav__link active" href="#">Tất cả (<%= data.totalRow %>)</a>
					</li>
					<li class="nav__item">
						<a class="admin-a nav__link" href="#" tabindex="-1">Hiện (<%= data.products.filter(p => p.product_is_display === 1).length %>)</a>
					</li>
					<li class="admin-a nav__item">
						<a class="admin-a nav__link" href="#" tabindex="-1">Ẩn (<%= data.products.filter(p => p.product_is_display === 0).length %>)</a>
					</li>
				</ul>
				<!-- End Nav -->
			</div>
			<!-- End Nav Scroller -->
			<!-- End Page Header -->

			<div class="main__filter">
				<div>
					<div class="filter__btn-group">
						<button class="btn-admin btn-outline-danger" id="deleteSelectedBtn">
							<span class="material-symbols-rounded"> delete_forever </span>
							<p>Xóa</p>
						</button>
						<button class="btn-admin btn-white" id="showSelectedBtn">
							<span class="material-symbols-rounded"> visibility </span>
							<p>Hiện</p>
						</button>
						<button class="btn-admin btn-white" id="hideSelectedBtn">
							<span class="material-symbols-rounded"> visibility_off </span>
							<p>Ẩn</p>
						</button>
					</div>
				</div>

				<div class="main__search search">
					<form action="/admin/products_admin" method="GET">
						<button type="submit" class="search__button">
							<span class="material-symbols-rounded"> search </span>
						</button>
						<input type="search" class="search__term" name="searchKey" id="search" placeholder="Tìm kiếm..." value="<%= (data.searchKey) ? data.searchKey: '' %>">
					</form>
				</div>
			</div>

			<!-- </header> -->

			<div class="main__table-display">
				<table class="main__table-responsive table">
					<thead>
						<tr class="table__heading">
							<th><input type="checkbox" class="checkbox" id="selectAll"></th>
							<th>#ID
								<span class="material-symbols-rounded"> arrow_drop_down </span>
							</th>
							<th>Tên sản phẩm
								<span class="material-symbols-rounded"> arrow_drop_down </span>
							</th>
							<th>Danh mục
								<span class="material-symbols-rounded"> arrow_drop_down </span>
							</th>
							<th>Số biến thể
								<span class="material-symbols-rounded"> arrow_drop_down </span>
							</th>
							<th>Doanh thu
								<span class="material-symbols-rounded"> arrow_drop_down </span>
							</th>
							<th>Trạng thái
								<span class="material-symbols-rounded"> tune </span>
							</th>
							<th>Thao tác</th>
						</tr>
					</thead>

					<tbody class="table__user-info">
						<% if (!data.totalRow) { %>
						<tr>
							<td class="empty" colspan="9">Không có kết quả trả về</td>
						</tr>
						<% } else { %>
						<% data.products.forEach(function(product) { %>
						<tr class="productItem" data-id="<%= product.product_id %>">
							<td><input type="checkbox" class="checkbox productCheckbox"></td>
							<td><%= product.product_id %></td>
							<td class="product-name-cell">
								<img src="/imgs/product_image/P<%= product.product_id %>/<%= product.product_avt_img || 'default.png' %>" alt="<%= product.product_name %>">
								<span><%= product.product_name %></span>
							</td>
							<td><%= product.category_name || 'Không có' %></td>
							<td><%= product.product_count || 0 %></td>
							<td><%= formatFunction.toCurrency(Number(product.revenue) || 0) %></td>
							<td class="status <%= product.product_is_bestseller ? 'good' : '' %> <%= product.product_is_display ? '' : 'hidden' %>">
								<p><%= product.product_is_bestseller ? 'Bán chạy' : '' %> <%= product.product_is_display ? '' : 'Đã ẩn' %></p>
							</td>
							<td>
								<!-- Button Group -->
								<div class="action-buttons">
									<a href="/admin/products_admin/edit/<%= product.product_id %>" class="btn-admin btn-edit">
										<span class="material-symbols-rounded">edit</span>
									</a>
									<button class="btn-admin btn-delete" data-id="<%= product.product_id %>">
										<span class="material-symbols-rounded">delete</span>
									</button>
								</div>
								<!-- End Button Group -->
							</td>
						</tr>
						<% }) %>
						<% } %>
					</tbody>
				</table>
				<%- include('../components/pagination', {pagination : data}) %>
			</div>
		</main>
	</div>
	<!-- End Main -->

	<!-- Confirmation Modal -->
	<div class="modal-overlay" id="deleteConfirmModal" style="display: none;">
		<div class="modal-container">
			<h3>Xác nhận xóa</h3>
			<p>Bạn có chắc chắn muốn xóa sản phẩm này không?</p>
			<div class="modal-buttons">
				<button id="cancelDelete" class="btn-admin btn-secondary">Hủy</button>
				<button id="confirmDelete" class="btn-admin btn-danger">Xóa</button>
			</div>
		</div>
	</div>

	<!-- Scripts -->
	<script src="/scripts/admin/cate_admin.js"></script>
	<script src="/scripts/admin/index_admin.js"></script>
	<script src="/scripts/admin/product_admin.js"></script>
</body>

</html>