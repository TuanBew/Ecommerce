<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Quản lý sản phẩm</title>
    <!-- Import CSS -->
    <link rel="stylesheet" href="/styles/Admin/pages/cate_view_admin.css">
    <link rel="stylesheet" href="/styles/Admin/components/toolbar.css">
    <!-- Google Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body>
    <div class="grid-container">
        <!-- Include sidebar partial -->
        <%- include('../partials/sidebar_admin') %>

        <!-- Include header partial -->
        <%- include('../partials/header_admin', { title: title }) %>

        <!-- Main -->
        <main class="main-container">
            <div class="main-title">
                <h1>QUẢN LÝ SẢN PHẨM</h1>
            </div>

            <!-- Toolbar -->
            <div class="toolbar">
                <div class="toolbar__search">
                    <input type="text" placeholder="Tìm kiếm sản phẩm...">
                    <button><span class="material-symbols-rounded">search</span></button>
                </div>
                <div class="toolbar__actions">
                    <a href="/admin/product_add_admin" class="btn btn-primary">
                        <span class="material-symbols-rounded">add</span>
                        Thêm sản phẩm
                    </a>
                </div>
            </div>

            <!-- Products Table -->
            <div class="table-responsive">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Hình ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Giá sale</th>
                            <th>Danh mục</th>
                            <th>Số lượng</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(products && products.length > 0) { %>
                            <% products.forEach(product => { %>
                                <tr>
                                    <td><%= product.product_id %></td>
                                    <td>
                                        <img src="/imgs/products/<%= product.product_img || 'default.jpg' %>" alt="<%= product.product_name %>" width="50">
                                    </td>
                                    <td><%= product.product_name %></td>
                                    <td><%= product.product_price ? product.product_price.toLocaleString('vi-VN') : '0' %>đ</td>
                                    <td><%= product.product_sale_price ? product.product_sale_price.toLocaleString('vi-VN') + 'đ' : '-' %></td>
                                    <td><%= product.category_name || 'Không xác định' %></td>
                                    <td><%= product.product_quantity || 0 %></td>
                                    <td>
                                        <a href="/admin/product_edit_admin/<%= product.product_id %>" class="btn btn-edit">
                                            <span class="material-symbols-rounded">edit</span>
                                        </a>
                                        <button class="btn btn-delete" data-id="<%= product.product_id %>">
                                            <span class="material-symbols-rounded">delete</span>
                                        </button>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="empty">Không có sản phẩm nào</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </main>
    </div>

    <!-- Scripts -->
    <script src="/scripts/Admin/index_admin.js"></script>
</body>
</html>
