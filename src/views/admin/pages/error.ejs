<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="IE104.O12_Nhom2">
    <link rel="shortcut icon" type="image/x-icon" href="/imgs/ico-logo-blue.png">
    <link rel="stylesheet" href="/styles/admin/pages/error.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <title><%= title %></title>
</head>

<body>
    <%- include('../partials/header_admin.ejs') %>

    <div class="grid-container">
        <%- include('../partials/sidebar_admin.ejs') %>

        <main class="main-container">
            <div class="card">
                <div class="card-header">
                    <h4>Lỗi</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <p><%= message || 'Đã xảy ra lỗi không xác định' %></p>
                    </div>
                    <div class="mt-4">
                        <a href="/admin" class="btn-admin btn-primary">
                            <span class="material-symbols-rounded">home</span>
                            <p>Quay lại trang chủ</p>
                        </a>
                    </div>
                </div>
            </div>

            <% if (process.env.NODE_ENV !== 'production' && errorDetails) { %>
                <div class="card mt-4">
                    <div class="card-header">
                        <h4>Thông tin gỡ lỗi</h4>
                    </div>
                    <div class="card-body">
                        <pre class="error-details"><%= errorDetails %></pre>
                    </div>
                </div>
            <% } %>
        </main>
    </div>

    <%- include('../partials/footer_admin.ejs') %>
    <script src="/scripts/admin/index_admin.js"></script>
</body>
</html>
