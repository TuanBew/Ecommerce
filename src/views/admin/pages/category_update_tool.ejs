<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="theme-color" content="#2a7ee4">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="IE104.O12_Nhom2">
    <meta name="description" content="TECHTWO Admin - Công cụ cập nhật danh mục">
    <link rel="shortcut icon" type="image/x-icon" href="/imgs/ico-logo-blue.png">
    <link rel="stylesheet" href="/styles/Admin/pages/index_admin.css">
    <title>TECHTWO.Admin - Công cụ cập nhật danh mục</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        .card {
            margin-bottom: 20px;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        .btn-group {
            margin-top: 20px;
        }
        .btn-primary {
            background-color: #2a7ee4;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 10px;
        }
        .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }
        .category-update-list {
            margin: 20px 0;
        }
        .category-update-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            padding: 10px;
            background-color: #f8f9fa;
            border-radius: 5px;
        }
        #updateStatus {
            margin-top: 20px;
            padding: 15px;
            border-radius: 5px;
        }
        .status-success {
            background-color: #d4edda;
            color: #155724;
        }
        .status-error {
            background-color: #f8d7da;
            color: #721c24;
        }
        .hidden {
            display: none;
        }
        .form-group {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        input, select {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }
        button {
            padding: 10px 15px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="grid-container">

        <%- include('../partials/sidebar_admin') %>
        <%- include('../partials/header_admin', {title: {title: 'Công cụ cập nhật danh mục'} }) %>

        <main class="main-container">

            <div class="page-header">
                <div class="row align-items-center">
                    <%- include('../partials/breadcrumb.ejs', breadcrumb=[{text: 'Công cụ', link: '#' }, {text: 'Cập nhật danh mục' , link: '#' }]) %>

                    <div class="page-header__title">
                        <h1>Công cụ cập nhật danh mục</h1>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Công cụ cập nhật danh mục</h4>
                            <p class="card-category">Sử dụng để cập nhật thông tin danh mục sản phẩm</p>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info">
                                <p>Tính năng này cho phép bạn cập nhật các loại danh mục sau:</p>
                                <ul>
                                    <li>Laptop</li>
                                    <li>PC</li>
                                    <li>Linh kiện</li>
                                    <li>Gaming Gear</li>
                                </ul>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <form id="categoryUpdateForm">
                                        <div class="form-group">
                                            <label>Chọn danh mục</label>
                                            <select class="form-control" id="categorySelect" name="categoryId">
                                                <option value="">-- Chọn danh mục --</option>
                                                <!-- Categories will be loaded here via AJAX -->
                                            </select>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label>Tên danh mục</label>
                                            <input type="text" class="form-control" id="categoryName" name="categoryName">
                                        </div>
                                        
                                        <div class="form-group">
                                            <label>Loại danh mục</label>
                                            <select class="form-control" id="categoryType" name="categoryType">
                                                <option value="Laptop">Laptop</option>
                                                <option value="PC">PC</option>
                                                <option value="Linh Kiện">Linh Kiện</option>
                                                <option value="Gaming Gear">Gaming Gear</option>
                                            </select>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label>Hình ảnh</label>
                                            <input type="file" class="form-control" id="categoryImage" name="image">
                                            <div id="imagePreview" class="mt-2"></div>
                                        </div>

                                        <div class="form-group">
                                            <button type="button" class="btn btn-primary" id="updateCategoryBtn">Cập nhật</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="/scripts/Admin/index_admin.js"></script>
    <script>
        $(document).ready(function() {
            // Load categories
            $.ajax({
                url: '/admin/api/categories',
                method: 'GET',
                success: function(response) {
                    const categories = response.categories;
                    const select = $('#categorySelect');
                    
                    categories.forEach(function(category) {
                        select.append(`<option value="${category.category_id}">${category.category_name} (${category.categorry_type})</option>`);
                    });
                },
                error: function(error) {
                    console.error('Error loading categories:', error);
                    toastr.error('Không thể tải danh sách danh mục.');
                }
            });

            // Handle category selection
            $('#categorySelect').change(function() {
                const categoryId = $(this).val();
                
                if (!categoryId) {
                    $('#categoryName').val('');
                    $('#categoryType').val('');
                    $('#imagePreview').empty();
                    return;
                }
                
                $.ajax({
                    url: `/admin/api/categories/${categoryId}`,
                    method: 'GET',
                    success: function(response) {
                        const category = response.category;
                        $('#categoryName').val(category.category_name);
                        $('#categoryType').val(category.categorry_type);
                        
                        if (category.category_img) {
                            $('#imagePreview').html(`<img src="/imgs/categories/${category.category_img}" alt="${category.category_name}" style="max-height: 100px;">`);
                        } else {
                            $('#imagePreview').empty();
                        }
                    },
                    error: function(error) {
                        console.error('Error loading category details:', error);
                        toastr.error('Không thể tải thông tin danh mục.');
                    }
                });
            });

            // Handle update button click
            $('#updateCategoryBtn').click(function() {
                const categoryId = $('#categorySelect').val();
                if (!categoryId) {
                    toastr.warning('Vui lòng chọn danh mục cần cập nhật.');
                    return;
                }
                
                const formData = new FormData($('#categoryUpdateForm')[0]);
                
                $.ajax({
                    url: '/admin/api/update-category',
                    method: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function(response) {
                        toastr.success('Cập nhật danh mục thành công!');
                    },
                    error: function(error) {
                        console.error('Error updating category:', error);
                        toastr.error('Đã xảy ra lỗi khi cập nhật danh mục.');
                    }
                });
            });
        });
    </script>
</body>

</html>
